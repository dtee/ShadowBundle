<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
	
    <services>
    	<!-- Register asset extension so that user could use jumbo filter -->
        
        <!-- Validators -->
        <service id="validator.unique.character" class="Odl\ShadowBundle\Validator\Constraint\CharacterValidator">
		    <argument type="service" id="doctrine.odm.mongodb.default_document_manager" />
		    <tag name="validator.constraint_validator" alias="sh_character" />
		</service>
    </services>
</container>
