<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Demo Bundle{% endblock %}</title>
        {{ ['css_lib', 'shadow_css', 'js_lib', 'shadow_js'] | jumbo}}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container">
            {% block content_header %}
                <ul class="menu">
                    {% block content_header_more %}
                        <li><a href="{{ path('odl_shadow_main_index') }}">Home</a></li>
                        <li><a href="{{ path('odl_shadow_main_players') }}">Players</a></li>
                        <li><a href="{{ path('odl_shadow_character_index') }}">Characters</a></li>
                        <li><a href="{{ path('odl_shadow_main_games') }}">Games</a></li>
                    {% endblock %}
                </ul>
                
                <ul class="menu right">
                	{% include 'OdlAuthBundle:Auth:_profile.html.twig' with {'app': app} %}
                </ul>

                <div style="clear: both"></div>
            {% endblock %}

            <div class="content">
                {% block content %}
                {% endblock %}
            </div>
        </div>
    </body>
</html>
