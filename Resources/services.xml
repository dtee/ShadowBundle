<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
		<parameter key="shadow.provider.class">Odl\AssetBundle\Twig\Extension\AssetExtension</parameter>
	</parameters>
	
    <services>
    	<!-- Register asset extension so that user could use jumbo filter -->
        <service id="shadow.mongodb_provider" class="%asset.asset_manager.class%">
			<argument type="service" id="kernel" />
            <argument>%assetic.yaml_asset_manager.packages%</argument>
        </service>
    </services>
</container>
